{
  "variables": {
    "region": "ap-southeast-2",
    "instance_type": "i3.large"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "region": "{{user `region`}}",
      "source_ami_filter": {
        "filters": {
          "name": "amzn2-ami-hvm-2.0.*-gp2",
          "architecture": "x86_64",
          "virtualization-type": "hvm"
        },
        "owners": ["amazon"],
        "most_recent": true
      },
      "tags": {
        "Amazon_AMI_Management_Identifier": "oculo_buildkite_server_ami",
        "source_ami": "{{ .SourceAMI }}"
      },
      "instance_type": "{{user `instance_type`}}",
      "spot_price": "auto",
      "spot_price_auto_product": "Linux/UNIX (Amazon VPC)",
      "ssh_username": "ec2-user",
      "ami_description": "Buildkite Elastic Stack (Amazon Linux 2 LTS w/ docker)"
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "conf",
      "destination": "/tmp"
    },
    {
      "type": "file",
      "source": "../../plugins",
      "destination": "/tmp/plugins"
    },
    {
      "type": "shell",
      "script": "scripts/install-utils.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-awslogs.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-aws-ssm-agent.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-lifecycled.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-docker.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-buildkite-agent.sh"
    },
    {
      "type": "shell",
      "script": "scripts/install-git-lfs.sh"
    },
    {
      "type": "shell",
      "inline": [
        "rm /home/ec2-user/.ssh/authorized_keys"
      ]
    },
    {
      "type": "shell",
      "script": "scripts/install-cc-reporter.sh"
    }
  ],
  "post-processors": [
    {
      "type": "amazon-ami-management",
      "regions": ["ap-southeast-2"],
      "identifier": "oculo_ecs_server_ami",
      "keep_releases": "3"
    }
  ]
}
